@page
@model laundry.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Laundry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Laundry.ID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Laundry.Color" /> @Html.DisplayNameFor(model => model.Laundry.Color)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Laundry.Status" class="control-label"></label>
                <select asp-for="Laundry.Status" asp-items="Laundry.Statuses" class="form-control"></select>
                <span asp-validation-for="Laundry.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Laundry.Comment" class="control-label"></label>
                <input asp-for="Laundry.Comment" class="form-control" />
                <span asp-validation-for="Laundry.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
